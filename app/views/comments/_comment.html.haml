.comment.clearfix
	.content
		%p.comment_content= comment.comment
		%p.comment_author= comment.user.email
	.buttons
		= link_to "Edit", edit_post_comment_path(comment.post, comment)
		= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure you want to delete your comment?" }
		= link_to "Like", like_post_comment_path(comment.post, comment), method: :get
		= link_to "Dislike", dislike_post_comment_path(comment.post, comment), method: :get
		= comment.get_upvotes.size
		likes
		= comment.get_downvotes.size
		dislikes
